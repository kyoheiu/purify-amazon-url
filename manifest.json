{

  "manifest_version": 2,
  "name": "url-shaving",
  "version": "1.0",

  "description": "Shorten the bloated url of Amazon",

  "icons": {
    "48": "icons/border-48.png"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "contextMenus"
  ],

  "browser_action": {
    "default_icon": "icons/beasts-32.png",
    "default_title": "url-shaving"
  },

  "background": {
    "scripts": ["background.js"]
  }

}
